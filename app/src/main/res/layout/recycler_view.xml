<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/mainActivityRecyclerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Imię i nazwisko"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/mainActivityRecyclerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/mainActivityRecyclerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zadzwoń"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mainActivityRecyclerTextView"
        android:layout_margin="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
